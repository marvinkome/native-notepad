{
    "name": "notepad",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "lint": "tslint --fix 'src/**/*.+(ts|tsx)'",
        "pretty":
            "prettier --write 'src/**/*.+(ts|tsx|css|js|jsx|md)'",
        "precommit": "pretty-quick --staged",
        "format": "yarn lint && yarn pretty",
        "start":
            "yarn format && node node_modules/react-native/local-cli/cli.js start",
        "run:devtool": "react-devtools",
        "test": "jest"
    },
    "dependencies": {
        "native-base": "^2.4.3",
        "react": "16.3.1",
        "react-native": "0.55.4",
        "styled-components": "^3.2.6"
    },
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/react": "^16.3.14",
        "@types/react-native": "^0.55.12",
        "@types/react-test-renderer": "^16.0.1",
        "babel-jest": "^22.4.3",
        "babel-preset-react-native": "4.0.0",
        "husky": "^0.14.3",
        "jest": "22.4.3",
        "prettier": "1.12.1",
        "pretty-quick": "^1.4.1",
        "react-devtools": "^3.2.1",
        "react-native-typescript-transformer": "^1.2.5",
        "react-test-renderer": "16.3.1",
        "ts-jest": "^22.4.5",
        "tslint": "^5.10.0",
        "typescript": "^2.8.3"
    },
    "jest": {
        "preset": "react-native",
        "moduleFileExtensions": ["ts", "tsx", "js"],
        "transform": {
            "\\.(js|jsx)$": "babel-jest",
            "\\.(ts|tsx)$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "node_module/(?!react-native|native-base-shoutem-theme)"
        ],
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "testPathIgnorePatterns": [
            "\\.snap$",
            "<rootDir>/node_modules/"
        ],
        "cacheDirectory": ".jest/cache"
    }
}
